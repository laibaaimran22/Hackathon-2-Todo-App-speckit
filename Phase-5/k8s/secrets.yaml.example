# Kubernetes Secrets Template
# To create actual secrets, replace the placeholder values with base64 encoded values
# Example: echo -n "your-secret-value" | base64

apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
type: Opaque
data:
  # Base64 encoded values
  database_url: <base64-encoded-database-url>
  cohere_api_key: <base64-encoded-cohere-api-key>
  better_auth_secret: <base64-encoded-better-auth-secret>
  jwt_secret: <base64-encoded-jwt-secret>