# Kubernetes Secrets example file
# Use this as a template to create actual secrets
# DO NOT commit actual secrets to version control

apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
type: Opaque
data:
  # Base64 encoded values
  # Example: echo -n 'your_database_url' | base64
  database-url: <base64-encoded-database-url>
  jwt-secret: <base64-encoded-jwt-secret>
  auth-secret: <base64-encoded-auth-secret>
  cohere-api-key: <base64-encoded-cohere-api-key>